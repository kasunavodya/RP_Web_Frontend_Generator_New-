<Window x:Class="TestPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestPro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="title" Content="Employee Registration Form" HorizontalAlignment="Center" Margin="0,7,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="18"/>
        <Rectangle HorizontalAlignment="Left" Height="342" Margin="134,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="589"/>
        <Label x:Name="age" Content="Employee Address" HorizontalAlignment="Left" Margin="161,129,0,0" VerticalAlignment="Top"/>
        <Label x:Name="name_Copy" Content="Employee Name" HorizontalAlignment="Left" Margin="161,84,0,0" VerticalAlignment="Top"/>
        <Label x:Name="contact" Content="Employee Contact" HorizontalAlignment="Left" Margin="162,173,0,0" VerticalAlignment="Top"/>
        <Label x:Name="dob" Content="Employee Date Of Birth" HorizontalAlignment="Left" Margin="161,217,0,0" VerticalAlignment="Top"/>
        <Label x:Name="salary" Content="Employee Salary" HorizontalAlignment="Left" Margin="161,304,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.518,1.691"/>
        <Label x:Name="subTitle" Content="Employee Details" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="16" RenderTransformOrigin="0.539,-0.004"/>
        <Label x:Name="gender" Content="Employee Gender" HorizontalAlignment="Left" Margin="162,261,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.518,1.691"/>
        <TextBox x:Name="empName" HorizontalAlignment="Left" Margin="323,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" Height="18" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="empAddress" HorizontalAlignment="Left" Margin="323,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" Height="18" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="empContact" HorizontalAlignment="Left" Margin="323,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" Height="18" TextChanged="TextBox_TextChanged"/>
        <DatePicker HorizontalAlignment="Left" Margin="323,219,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="empMale" Content="Male" HorizontalAlignment="Left" Margin="323,272,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="empFemale" Content="Female" HorizontalAlignment="Left" Margin="438,272,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="empSalary" HorizontalAlignment="Left" Margin="323,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="354" Height="18" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="submitBtn" Content="Submit" HorizontalAlignment="Left" Margin="395,351,0,0" VerticalAlignment="Top" Width="100" Background="#FF4D98F3"/>
   </Grid>
</Window>
